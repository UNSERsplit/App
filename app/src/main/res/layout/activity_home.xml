<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="541dp"
        android:layout_height="742dp"
        android:layout_marginTop="-350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_shaped_blue2" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/button_nav_menu" />

    <TextView
        android:id="@+id/txtVkontostand"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="270dp"
        android:fontFamily="@font/roboto_medium"
        android:text="###"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listVgruppenPersonen"
        android:layout_width="387dp"
        android:layout_height="433dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/txtViewGruppenPersonen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Gruppen/Personen:"
        android:textSize="20sp"

        app:layout_constraintBottom_toTopOf="@+id/listVgruppenPersonen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/txtVPlusMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtVkontostand"
        app:layout_constraintEnd_toStartOf="@+id/txtVkontostand"
        app:layout_constraintTop_toTopOf="@+id/txtVkontostand" />


</androidx.constraintlayout.widget.ConstraintLayout>